<div class="container">

    <div class="row justify-content-end mb-3">
        <div class="col-2 text-end">
            <%= link_to new_inventory_inventory_food_path(@inventory), :class => "btn
                btn btn-dark add mb-3" do %> Add Food 
            <% end %>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <h2 class="display-3">
                <%= @inventory.name %>
            </h2>
            <h4>Food List</h4>
        </div>
        <div class="col-12 justify-content-start">
            <table class="table table-striped table-bordered text-center table-hover">
                <% if @inventory_foods.empty? %>
                    <p class="text-center">No Foods in found In inventory.</p>
                <% else %>
                <thead class="table-dark">
                    <tr>
                    <th>Food</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @inventory_foods.each do |invfood| %>
                    <tr>
                        <td><%= invfood.food.name %></td>
                        <td><%= invfood.quantity %></td>
                        <td>
                        <%=button_to "Delete", inventory_inventory_food_path(inventory_id: @inventory.id, id: invfood.id), method: :delete, class:"btn btn-danger"%>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>

</div>