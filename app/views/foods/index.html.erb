<h3><%= link_to 'Add a food', new_food_path, class: "btn btn-primary" %></h3>

<table class="table table-striped table-bordered table-hover">
    <% if @foods.empty? %>
    <% else %>
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Measurement Unit</th>
          <th>Unit Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><span>$<%= food.price %></span></td>
            <td><%= link_to "Delete", food_path(food), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
